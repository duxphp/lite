{
	"name": "duxphp/lite",
	"type": "framework",
	"description": "The lightweight framework based on slim php",
	"keywords": ["PHP framework", "PHP", "slim", "duxphp"],
	"homepage": "https://github.com/duxphp",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/duxphp/lite/issues",
